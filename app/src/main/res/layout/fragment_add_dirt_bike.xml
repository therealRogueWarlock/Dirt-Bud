<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.garage.AddDirtBike">

    <Spinner
        android:id="@+id/mark_spinner_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="Mark"
        android:minHeight="48dp" />

    <Spinner
        android:id="@+id/displacment_spinner_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="Displacement"
        android:minHeight="48dp" />

    <Spinner
        android:id="@+id/stroke_spinner_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="Stroke"
        android:minHeight="48dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/confirm_add_dirt_bike_id"
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:text="add dirt bike"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.954" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>